<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingVertical="24dp"
    android:paddingHorizontal="24dp"
    android:background="@drawable/pill_shape_background"
    android:layout_marginVertical="8dp"
    android:layout_marginHorizontal="16dp"
    android:elevation="4dp"
    android:clipToPadding="false">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:scaleType="fitXY"
        android:id="@+id/bullet"
        android:src="@drawable/ic_radio_button_unchecked_black_24dp"
        android:tint="@color/colorAccent"
        android:layout_centerVertical="true"
        android:contentDescription="@string/bullet" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/label"
        style="@style/TextAppearance.AppCompat.Medium"
        android:textSize="18sp"
        android:textColor="@android:color/black"
        android:layout_marginVertical="4dp"
        android:paddingStart="?android:attr/listPreferredItemPaddingStart"
        android:paddingEnd="?android:attr/listPreferredItemPaddingEnd"
        android:maxLines="3"
        android:ellipsize="end"
        android:includeFontPadding="false"
        android:layout_toEndOf="@id/bullet" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tag"
        style="@style/TextAppearance.AppCompat.Medium"
        android:textSize="14sp"
        android:textColor="@color/colorPrimary"
        android:textAlignment="center"
        android:layout_marginHorizontal="12dp"
        android:paddingVertical="4dp"
        android:paddingHorizontal="12dp"
        android:ellipsize="end"
        android:maxLines="1"
        android:background="@drawable/pill_shape_tag_background"
        android:includeFontPadding="false"
        android:layout_below="@id/label"
        android:layout_toEndOf="@id/bullet"
        android:elevation="4dp"/>

</RelativeLayout>