<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/label"
        style="@style/TextAppearance.AppCompat.Large"
        android:textSize="28sp"
        android:ellipsize="end"
        android:background="@color/colorPrimary"
        android:paddingVertical="12dp"
        android:paddingHorizontal="24dp"
        android:layout_alignParentTop="true"
        android:textStyle="bold"
        android:hint="@string/hint_label"
        android:inputType="textCapSentences|textAutoCorrect|textMultiLine"
        android:autofillHints="@string/hint_label" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:linksClickable="true"
        android:autoLink="all"
        android:gravity="top"
        android:id="@+id/sublabel"
        style="@style/TextAppearance.AppCompat.Medium"
        android:textSize="18sp"
        android:paddingHorizontal="24dp"
        android:ellipsize="end"
        android:background="@color/colorPrimary"
        android:layout_below="@id/label"
        android:layout_alignBottom="@id/bottom_app_bar_coordinator"
        android:hint="@string/hint_sublabel"
        android:inputType="textCapSentences|textAutoCorrect|textMultiLine"
        android:autofillHints="@string/hint_sublabel" />

    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/bottom_app_bar_coordinator"
        android:layout_alignParentBottom="true">
        <com.google.android.material.bottomappbar.BottomAppBar
            android:id="@+id/bottom_app_bar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            style="@style/Widget.MaterialComponents.BottomAppBar.Colored"
            app:backgroundTint="@color/colorPrimary"
            app:navigationIcon="@drawable/ic_arrow_back_black_24dp" />
    </androidx.coordinatorlayout.widget.CoordinatorLayout>

</RelativeLayout>