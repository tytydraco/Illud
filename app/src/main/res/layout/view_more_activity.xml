<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tag"
        style="@style/TextAppearance.AppCompat.Medium"
        android:textSize="18sp"
        android:textColor="@color/colorPrimary"
        android:textColorHint="@color/colorPrimaryDark"
        android:textAlignment="center"
        android:layout_marginTop="24dp"
        android:layout_marginHorizontal="24dp"
        android:paddingVertical="4dp"
        android:paddingHorizontal="12dp"
        android:ellipsize="end"
        android:maxLines="1"
        android:background="@drawable/pill_shape_tag_background"
        android:layout_alignParentTop="true"
        android:hint="@string/hint_tag"
        android:inputType="textCapSentences|textAutoCorrect"
        android:autofillHints="@string/hint_tag"
        android:elevation="4dp"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/label"
        style="@style/TextAppearance.AppCompat.Large"
        android:textSize="28sp"
        android:ellipsize="end"
        android:background="@color/colorPrimary"
        android:paddingVertical="12dp"
        android:paddingHorizontal="24dp"
        android:layout_below="@id/tag"
        android:textStyle="bold"
        android:hint="@string/hint_label"
        android:inputType="textCapSentences|textAutoCorrect|textMultiLine"
        android:autofillHints="@string/hint_label" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:linksClickable="true"
        android:autoLink="all"
        android:gravity="top"
        android:id="@+id/content"
        style="@style/TextAppearance.AppCompat.Medium"
        android:textSize="18sp"
        android:paddingBottom="12dp"
        android:paddingHorizontal="24dp"
        android:ellipsize="end"
        android:background="@color/colorPrimary"
        android:layout_below="@id/label"
        android:layout_alignParentBottom="true"
        android:hint="@string/hint_content"
        android:inputType="textCapSentences|textAutoCorrect|textMultiLine"
        android:autofillHints="@string/hint_content" />

</RelativeLayout>